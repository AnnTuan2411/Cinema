<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    @* <link href="~/css/bootstrap.min.css" rel="stylesheet" /> *@
    <link href="~/css/css2/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/app.css" rel="stylesheet">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/main.css" />
    @* <link href="~/css/fontawesome6.4.2/css/fontawesome.min.css" rel="stylesheet" /> *@
    <title>@ViewData["Title"] - CinemaWebApp</title>
</head>


<body>
    <!-- Wrapper -->
    <div class="wrapper">
        <!-- Slidebar -->
        <nav id="sidebar" class="sidebar js-sidebar">
            <div class="sidebar-content js-simplebar">
                <a class="sidebar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="align-middle">AdminKit</span>
                </a>
                <ul class="sidebar-nav">
                    <li class="sidebar-header">
                        Pages
                    </li>

                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-area="" asp-controller="AdminHome" asp-action="Index">
                            <i class="fa-solid fa-bars-progress"></i> <span class="align-middle">Dashboard</span>
                        </a>
                    </li>

                    @if (ViewBag.SessionRoleID == 4)
                    {
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="" asp-controller="Movie" asp-action="Index">
                                <i class="fa-solid fa-bars-progress"></i> <span class="align-middle">Movie</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="" asp-controller="MovieShow" asp-action="Index">
                                <i class="fa-solid fa-bars-progress"></i> <span class="align-middle">Movie Shows</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="" asp-controller="People" asp-action="Index">
                                <i class="fa-solid fa-bars-progress"></i> <span class="align-middle">Actors / Directors</span>
                            </a>
                        </li>
                    }
  

                    @if (ViewBag.SessionRoleID == 2)
                    {
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="" asp-controller="Employee" asp-action="Index">
                                <i class="fa-solid fa-users"></i> <span class="align-middle">Quản lý tài khoản</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="" asp-controller="StatisticsManage" asp-action="Index">
                                <i class="fas fa-chart-bar"></i> <span class="align-middle">Thống kê</span>
                            </a>
                        </li>
                    }


                    @if (ViewBag.SessionRoleID == 3)
                    {
                        
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="" asp-controller="EmployeeManage" asp-action="ListEmployeesAndAccounts">
                                <i class="fa-solid fa-people-group"></i> <span class="align-middle">Quản lý nhân viên</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="" asp-controller="CalendarManage" asp-action="Index">
                                <i class="far fa-calendar"></i> <span class="align-middle">Tạo lịch cho từng NV</span>
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a class="sidebar-link" asp-area="" asp-controller="CalendarManage" asp-action="ViewAllEmpCalendars">
                                <i class="fas fa-calendar-day"></i> <span class="align-middle">Xem lịch làm việc tất cả NV</span>
                            </a>
                        </li>
                    }
                    

                  

                    <!----------------------------- Chung -------------------------------------->
                    <li class="sidebar-header">
                        Account
                    </li>
                    <li class="sidebar-item">
                        @* chuyển sang cái form giống bên details nhân viên *@
                        <a class="sidebar-link" href="#">
                            <i class="align-middle" data-feather="user"></i></i> <span class="align-middle">Profile</span>
                        </a>
                    </li> 
                   
                    <li class="sidebar-item">
                        <a class="sidebar-link" href="/Accounts/Logout">
                            <i class="align-middle" data-feather="log-in"></i> <span class="align-middle">Đăng xuất</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <!-- End slidebar -->
        <!-- Main -->
        <div class="main">
            <!-- Header -->
            <nav class="navbar navbar-expand navbar-light navbar-bg">
                <!-- Menu button -->
                <a class="sidebar-toggle js-sidebar-toggle">
                    <i class="hamburger align-self-center"></i>
                </a>
                <!-- End Menu button -->
                <!-- Avatar dropdown -->
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav navbar-align">
                        <li class="nav-item dropdown">                     
                            <a class="nav-link dropdown-toggle d-none d-sm-inline-block" href="#"
                               data-bs-toggle="dropdown">
                                <i class="fa-solid fa-user-tie"></i> <span class="text-dark"></span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a class="dropdown-item" href="#">
                                    <i class="align-middle me-1"
                                       data-feather="user"></i> Profile
                                </a>   @* chuyển sang cái form giống bên update nhân viên *@
                                <div class="dropdown-divider"></div>
                       
                            <a class="dropdown-item" asp-area="" asp-controller="Accounts" asp-action="Logout">Đăng xuất</a>
                        
                            </div>
                        </li>
                    </ul>
                </div>
                <!-- End avatar dropdown -->
            </nav>
            <!-- End Header -->
            <!-- Details -->
            <div id="mainDetails">
                @RenderBody()
            </div>
            <!-- End Details -->
            <!-- Footer -->
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row text-muted">
                        <div class="col-6 text-start">
                            <p class="mb-0">
                                <a class="text-muted" href="">
                                    <strong>Admin</strong>
                                </a>
                                -
                                <a class="" href="">
                                    <strong>Cinema management</strong>
                                </a>
                            </p>
                        </div>
                        @* <div class="col-6 text-end">
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <a class="text-muted" href="" target="_blank">Support</a>
                                </li>
                                <li class="list-inline-item">
                                    <a class="text-muted" href="" target="_blank">Help Center</a>
                                </li>
                                <li class="list-inline-item">
                                    <a class="text-muted" href="" target="_blank">Privacy</a>
                                </li>
                                <li class="list-inline-item">
                                    <a class="text-muted" href="" target="_blank">Terms</a>
                                </li>
                            </ul>
                        </div> *@
                    </div>
                </div>
            </footer>
            <!-- End Footer -->
        </div>
        <!-- End Main -->
    </div>
    <!-- End Wrapper -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
    <script src="~/js/app.js"></script> 	<!-- js icon slidebar -->
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
