@model Cinema.Models.Employee

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<main class="content">
    <div class="container-fluid p-0">
        <div class="mb-3">
            <h1 class="h3 d-inline align-middle">Profile</h1>
        </div>
        <div class="row">
            <div class="col-md-4 col-xl-2">
                <div class="card mb-3">
                     <div class="card-header">
                        <h5 class="card-title mb-0">Profile Details</h5>
                    </div>
                    <div class="card-body text-center">
                        <img style="aspect-ratio: 1 / 1;" src="@Model.Img" alt="@Model.Acc.FullName" class="img-fluid rounded-circle mb-2" width="128" height="128" />
                        <h5 class="card-title mb-0">@Html.DisplayFor(model => model.Acc.FullName)</h5><!--Full name-->
                        <div class="text-muted mb-2">@Html.DisplayFor(model => model.Position)</div><!--Position-->
                    </div>
                    <hr class="my-0" />
                </div>
            </div>

            <div class="col-md-8 col-xl-9">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0 mt-1">Thông tin chi tiết</h5>
                    </div>
                    <div class="card-body h-100 pt-0">
                        <div class="card-header pt-0">
                            <h5 class="card-title mb-0">Họ và tên</h5>
                        </div>
                        <div class="card-body pt-0 pb-0">
                            @Html.DisplayFor(model => model.Acc.FullName)
                        </div>
                        <hr />

                        <div class="card-header pt-0">
                            <h5 class="card-title mb-0">Ngày sinh</h5>
                        </div>
                        <div class="card-body pt-0 pb-0">
                            @Model.Acc.DateOfBirth.ToString("dd/MM/yyyy")                         
                        </div>
                        <hr />

                        <div class="card-header pt-0">
                            <h5 class="card-title mb-0">Email</h5>
                        </div>
                        <div class="card-body pt-0 pb-0">
                            @Html.DisplayFor(model => model.Acc.Email)
                        </div>
                        <hr />

                        <div class="card-header pt-0">
                            <h5 class="card-title mb-0">Giới tính</h5>
                        </div>
                        <div class="card-body pt-0 pb-0">
                            @Html.DisplayFor(model => model.Acc.Gender)
                        </div>
                        <hr />

                        <div class="card-header pt-0">
                            <h5 class="card-title mb-0">Số điện thoại</h5>
                        </div>
                        <div class="card-body pt-0 pb-0">
                            @Html.DisplayFor(model => model.Acc.Phone)
                        </div>
                        <hr />

                        <div class="card-header pt-0">
                            <h5 class="card-title mb-0">Địa chỉ</h5>
                        </div>
                        <div class="card-body pt-0 pb-0">
                            @Html.DisplayFor(model => model.Acc.Address)
                        </div>
                        <hr />

                        <div class="row justify-content-center">
                            <div class="d-grid col-md-3">
                                @Html.ActionLink("Trở về", "ListEmployeesAndAccounts", "EmployeeManage", null, new { @class = "btn btn-primary" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
